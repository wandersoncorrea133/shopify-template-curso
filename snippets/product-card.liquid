<div class="w-full py-6 px-3">
  <div class="border bg-white shadow-lg rounded-lg overflow-hidden text-zinc-900">
    <a href="{{ product_product.url }}">
      {% if product_product.featured_image %}
        <div class="h-80 overflow-hidden">
          <img class="w-full object-cover h-full" src="{{ product_product.featured_image |  image_url: width: 600, height: 600 }}" alt="{{ product_product.featured_image.alt }}">  
        </div>

        {% else %}
          {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }}
      {% endif %}
    </a>

    <div class="flex flex-col p-4">
      <span class="text-sm text-gray-400">{{ product_product.vendor }}</span>
      <a href="{{ product_product.url }}" class="text-gray-700 uppercase font-medium">{{ product_product.title | truncate: 22 }}</a>
      <p class="text-gray-500">{{ product_product.price | money }}</p>
    </div>
  </div>
 </div>