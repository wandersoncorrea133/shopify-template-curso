<div class="h-full flex items-center justify-center py-12 px-6 md:px-4 lg:px-8" x-data="{ loginForm: true, pwRecoverForm: false }">
  <div x-show="loginForm" class="max-w-md w-full space-y-8">
    <div>
      <h1 class="text-center text-3xl font-bold mt-6">sign in to your account</h1>
    </div>
    <div class="mt-8">
      {% form 'customer_login' %}

        {% if form.errors %}
          <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
            <strong class="font-bold">Error!</strong>
            <p class="block sm:inline">{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}


        <div class="my-2">
          <label class="sr-only" for="email_address">E-mail</label>
          <input class="relative block w-full px-3 py-2 border text-gray-900" type="email" id="email_address" name="customer[email]" autocomplete="email" placeholder="E-mail">
        </div>

        {% if form.password_needed %}
          <div class="my-2">
            <label class="sr-only" for="password">Senha</label>
            <input class="relative block w-full px-3 py-2 border text-gray-900" type="password" id="password" name="customer[password]" autocomplete="current-password" placeholder="Senha">
          </div>
        {% endif %}

        <div class="my-2 text-sm">
          <a x-on:click="loginForm = false; pwRecoverForm = true" href="#" class="underline text-gray-400 hover:text-gray-600">
            Forgot your password?
          </a>
        </div>

        <div>
          <button type="submit" class="relative text-lg w-full px-4 py-2 font-medium text-gray-50 bg-transparent border border-gray-50 transition duration-100 ease-linear hover:bg-gray-100 hover:text-gray-900">Sign in</button>
        </div>
      {% endform %}
    </div>

    {% if shop.checkout.guest_login %}
      <hr class="my-12">

      <div>
         <h1 class="mt-6 text-center text-3xl font-bold">Continue as a guest</h1>
      </div>

      {% form 'guest_login' %}
        <div>
          <button type="submit" class="relative text-lg w-full px-4 py-2 font-medium text-gray-50 bg-transparent border border-gray-50 transition duration-100 ease-linear hover:bg-gray-100 hover:text-gray-900">Continue</button>
        </div>
      {% endform %}
    {% endif %}
  </div>

  <div x-show="pwRecoverForm" class="max-w-md w-full space-y-8">
    <div>
      <h1 class="text-center text-3xl font-bold mt-6">Recover your password</h1>
    </div>
    <div class="mt-8">
      {% form 'recover_customer_password' %}

        {% if form.errors %}
          <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
            <strong class="font-bold">Error!</strong>
            <p class="block sm:inline">{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}


        <div class="my-2">
          <label class="sr-only" for="email">E-mail</label>
          <input class="relative block w-full px-3 py-2 border text-gray-900" type="email" id="email" name="email" autocomplete="email" placeholder="E-mail">
        </div>

        <div>
          <button type="submit" class="relative text-lg w-full px-4 py-2 font-medium text-gray-50 bg-transparent border border-gray-50 transition duration-100 ease-linear hover:bg-gray-100 hover:text-gray-900">Recover password</button>
        </div>

        <div class="mt-8 text-sm">
          <a x-on:click="loginForm = true; pwRecoverForm = false" href="#" class="underline text-gray-400 hover:text-gray-600">Back to login</a>
        </div>
      {% endform %}
    </div>
  </div>
</div>