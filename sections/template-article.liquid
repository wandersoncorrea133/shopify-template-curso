<article class="py-8">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'article_title' %}
        <div class="flex items-center justify-center">
          <div class="max-w-7xl text-center">
            <a href={{ blog.url }} class="text-base uppercase text-zinc-300 hover:text-zinc-100 font-bold">{{ blog.title }}</a>
            <h1 class="text-4xl md:text-6xl font-medium text-zinc-50">{{ article.title }}</h1>
          </div>
        </div>
      {% when 'article_author' %}
        <div class="flex items-center justify-center">
          <div class="max-w-7xl text-center">
            {% if section.settings.enable_author %}
              <small class="text-white">{{ article.author }}</small>
            {% endif %}
          </div>
        </div>

      {% when 'article_published_date' %}
        <div class="flex items-center justify-center">
          <div class="max-w-7xl text-center">
            {% if section.settings.enable_published_date %}
              <time class="text-white" datetime="{{ article.published_at | date: "%Y-%m-%d" }}">{{ article.published_at | date: format: 'on_date' }}</time>
            {% endif %}
          </div>
        </div>

      {% when 'featured_image' %}
        <div class="max-w-7xl bg-blue-100 rounded-lg mx-2 md:mx-auto overflow-hidden my-4">
          {% if article.image != blank %}
            <img
              class="w-full h-80 md:h-96 object-cover object-center"
              src={{ article.image | img_url: 'large' }}
              alt={{article.image.alt}}>
          {% else %}
            {% assign placeholder_image = 'lifestyle-2' %}
            {{ placeholder_image | placeholder_svg_tag: 'w-full h-80 md:h-96 object-cover object-center p-5' }}
          {% endif %}
        </div>

      {% when 'article_content' %}
        <div class="text-white flex items-center justify-center">
          <div class="max-w-4xl px-4 md:px-0">{{ article.content }}</div>
        </div>
    {% else %}

      {% endcase %}
    {% endfor %}
  </article>

  {% if blog.comments_enabled? %}
    <div id="comments" class="my-8">
      {% if article.comments_count > 0 %}
      {% else %}
        There are no comments in this article
      {% endif %}
    </div>

    <div id="comments_form" class="mb-8">
      {% form 'new_comment'
        , article %}
        <div class="flex-1 mx-auto items-center justify-center max-w4xl px-4">
          <div class="px-1 md:flex mb-3">
            <div class="px-3 md:w-1/2"></div>
          </div>
        </div>
      {% endform %}
    </div>
  {% endif %}


  {% schema %}
    {
      "name": "Template Article",
      "settings": [
        {
          "type": "checkbox",
          "id": "enable_author",
          "default": true,
          "label": "Display Author Name"
        }, {
          "type": "checkbox",
          "id": "enable_published_date",
          "default": true,
          "label": "Display Published Date"
        }
      ],
      "blocks": [
        {
          "type": "article_title",
          "name": "Title",
          "limit": 1
        },
        {
          "type": "article_author",
          "name": "Author",
          "limit": 1
        },
        {
          "type": "article_published_date",
          "name": "Published Date",
          "limit": 1
        },
        {
          "type": "featured_image",
          "name": "Thumbnail",
          "limit": 1
        }, {
          "type": "article_content",
          "name": "Content",
          "limit": 1
        }
      ]
    }
  {% endschema %}