<div class="h-full flex items-center justify-center py-12 px-6 md:px-4 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h1 class="text-center text-3xl font-bold mt-6">Register an account</h1>
    </div>
    <div class="mt-8">
      {% form 'create_customer' %}

        {% if form.errors %}
          <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
            <strong class="font-bold">Error!</strong>
            <p class="block sm:inline">{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}


        <div class="my-2">
          <label class="sr-only" for="first_name">First name</label>
          <input 
            class="relative block w-full px-3 py-2 border text-gray-900" 
            type="text" 
            id="first_name" 
            name="customer[first_name]" 
            autocomplete="given-name" 
            placeholder="First name"
          >
        </div>

        <div class="my-2">
          <label class="sr-only" for="last_name">Last name</label>
          <input 
            class="relative block w-full px-3 py-2 border text-gray-900" 
            type="text" 
            id="last_name" 
            name="customer[last_name]" 
            autocomplete="family-name" 
            placeholder="Last name"
          >
        </div>

        <div class="my-2">
          <label class="sr-only" for="birthday">Birthday</label>
          <input 
            class="relative block w-full px-3 py-2 border text-gray-900" 
            type="date" 
            id="birthday" 
            name="customer[note][Birthday]"
          >
        </div>

        <div class="my-2">
          <label class="sr-only" for="email_address">E-mail</label>
          <input 
            class="relative block w-full px-3 py-2 border text-gray-900" 
            type="email" 
            id="email_address" 
            name="customer[email]" 
            autocomplete="email" 
            placeholder="E-mail"
          >
        </div>

        <div class="my-2">
          <label class="sr-only" for="password">Senha</label>
          <input 
            class="relative block w-full px-3 py-2 border text-gray-900" 
            type="password" 
            id="password" 
            name="customer[password]" 
            autocomplete="new-password" 
            placeholder="Senha"
          >
        </div>

        <div>
          <button type="submit" class="relative text-lg w-full px-4 py-2 font-medium text-gray-50 bg-transparent border border-gray-50 transition duration-100 ease-linear hover:bg-gray-100 hover:text-gray-900">Create account</button>
        </div>
      {% endform %}
    </div>
  </div>
</div>